
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/> 
    <layout class="org.apache.log4j.PatternLayout"> 
       <!-- <param name="ConversionPattern" value="%-5p %c{1} - %m%n"/> -->
	<param name="ConversionPattern" value="%r [%t] %-5p %c %x - %m%n"/> 
  	
	<!-- <param name="ConversionPattern" value="%-6r [%15.15t] %-5p %30.30c %x - %m%n"/> -->
    </layout> 
  </appender> 
  <!-- ************* Package AnalyticsServer ******************************  -->
  <logger name="AnalyticsServer">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
  </logger>
  <logger name="AnalyticsServer.AnalyticsManagementSystem">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
  </logger>
  <logger name="AnalyticsServer.MClientHandler">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
   </logger>
   <logger name="AnalyticsServer.MessageDistributor">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
   </logger>
   <logger name="AnalyticsServer.StatisticHandler">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
   </logger>
   <logger name="AnalyticsServer.Filter">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
   </logger>
    <logger name="AnalyticsServer.AnalyticsServerInterfaceImpl">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
   </logger>



  <!-- ************* Package BillingsServer ******************************  -->
  <logger name="BillingsServer">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
  </logger>

  <!-- ************* Package ManagementClients ******************************  -->
  <logger name="ManagementClient">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
  </logger>
 <!-- ************* Package RMIRegistry ******************************  -->
  <logger name="RMIRegistry">
    <!-- Print only messages of level warn or above in the package com.foo -->
    <level value="error"/> 
  </logger>



  <root> 
    <priority value ="all" /> 
    <appender-ref ref="console" /> 
  </root>
  
</log4j:configuration>

